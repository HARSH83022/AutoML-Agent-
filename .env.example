# AutoML Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Configuration (Choose ONE)
# ============================================

# Option 1: Ollama (Local - Recommended for development)
LLM_MODE=ollama
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=mistral:latest

# Option 2: OpenAI
# LLM_MODE=openai
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4-turbo-preview

# Option 3: Anthropic Claude
# LLM_MODE=anthropic
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Option 4: Google Gemini
# LLM_MODE=gemini
# GOOGLE_API_KEY=...
# GEMINI_MODEL=gemini-2.0-flash-exp

# Option 5: HuggingFace (Local)
# LLM_MODE=hf
# HF_MODEL=google/flan-t5-small

# ============================================
# Data Sources (Optional)
# ============================================

# Kaggle API (for dataset downloads)
KAGGLE_USERNAME=
KAGGLE_KEY=

# HuggingFace (for dataset downloads)
HF_TOKEN=

# ============================================
# Application Settings
# ============================================

# Data directories
DATA_DIR=data
ARTIFACT_DIR=artifacts

# Synthetic data settings
SYNTHETIC_DEFAULT_ROWS=2000

# Server settings
PORT=8000
HOST=0.0.0.0

# ============================================
# Database
# ============================================

DATABASE_URL=sqlite:///./runs.db

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO

# ============================================
# Frontend (for production builds)
# ============================================

# VITE_API_URL=https://your-api-domain.com
